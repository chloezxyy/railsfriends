  </div>

  <div class="field form-group">
    <% form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:"field form-control", placeholder:"Email" %>
  </div>

  <div class="field form-group">
    <% form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class:"field form-control", placeholder:"Phone" %>
  </div>

  <div class="field form-group">
    <% form.label :twitter, style: "display: block" %>
    <%= form.text_field :twitter, class:"field form-control", placeholder:"Twitter" %>
  </div>

  <div class="field form-group">
    <% form.label :twitter, style: "display: block" %>
